<h1>Create a Team and Heroes!</h1>
<form action="/teams" method="post">
  <div>
    <label for="team_name">Team Name</label>
    <input id="team_name" type="text" name="team[name]" value="">
    <label for="team_motto">Team Motto</label>
    <input id="team_motto" type="text" name="team[motto]" value="">
  </div>
  <h2>Hero 1</h2>
  <div>
    <label for="hero1_name">Hero1 Name</label>
    <input id="hero1_name" type="text" name="team[members][super1][name]" value="">
    <label for="hero1_power">Hero1 Power</label>
    <input id="hero1_power" type="text" name="team[members][super1][power]" value="">
    <label for="hero1_bio">Hero1 Bio</label>
    <input id="hero1_bio" type="text" name="team[members][super1][bio]" value="">
  </div>
  <h2>Hero 2</h2>
  <div>
    <label for="hero2_name">Hero2 Name</label>
    <input id="hero2_name" type="text" name="team[members][super2][name]" value="">
    <label for="hero2_power">Hero2 Power</label>
    <input id="hero2_power" type="text" name="team[members][super2][power]" value="">
    <label for="hero2_bio">Hero2 Bio</label>
    <input id="hero2_bio" type="text" name="team[members][super2][bio]" value="">
  </div>
  <h2>Hero 3</h2>
  <div>
    <label for="hero3_name">Hero3 Name</label>
    <input id="hero3_name" type="text" name="team[members][super3][name]" value="">
    <label for="hero3_power">Hero3 Power</label>
    <input id="hero3_power" type="text" name="team[members][super3][power]" value="">
    <label for="hero3_bio">Hero3 Bio</label>
    <input id="hero3_bio" type="text" name="team[members][super3][bio]" value="">
  </div>
  <input type="submit" name="Submit">
</form>
